@model IEnumerable<gezginler.Models.Resim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
            <li class="active">Icons</li>
        </ol>
    </div><!--/.row-->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Resim Listesi</h1>
        </div>
    </div><!--/.row-->

    <div class="row">

        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Resim Tablosu</div>
                <div class="panel-body">
                    <table data-toggle="table" data-url="tables/data2.json">
                        <thead>
                            <tr>
                                <th data-field="id" data-align="right">ID</th>
                                <th data-field="name">Resim Yolu</th>
                                <th data-field="price">Resim Yol</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                
                                <tr>
                                    <td>@item.ResimId</td>  
                                    <td>@item.Resimyol</td>   
                                    <td>@item.Resimyol</td>
                                    @*<td>@Html.ActionLink("Düzenle", "Edit", "Resim", new { id = item.ResimId}, null) | @Html.ActionLink("Sil", "Delete","Resim", new { id = item.ResimId }, null)</td>*@

                                </tr>
                            }
                            
                        
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>



